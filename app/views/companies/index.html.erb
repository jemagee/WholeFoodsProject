<header class="row">
	<h1>Index of Companies</h1>
	<%= link_to fa_icon("plus", text: "Add Company"), new_company_path, class: "btn btn-sm btn-success" %>
</header>
<div class="row">
	<ul class="list-unstyled">
		<% @companies.each do |company| %>
			<li><%= link_to company.name, company_path(company) %></li>
		<% end %>
	</ul>
</div>